<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - JKS Application</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Data Importer", "Index", "Import", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Excel", "Excel", "Import")</li>
                    <li>@Html.ActionLink("CSV", "Csv", "Import")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <div id="myModal" class="modal modal-dialog">
            <div class="modal-sm">
                <div class="modal-content">
                    <div class="modal-body">
                        <img src="~/Content/Image/horizontal_loading.gif" alt="Loading....." />
                    </div>
                </div>
            </div>
        </div>
        <footer>
            <p>JKS Applicaion</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        function ShowProcessBar() {
            $('#myModal').modal('toggle');
            return true;
        }
    </script>
</body>
</html>
